generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String?
  age       Int?
  gender    String?  // 'Male', 'Female', 'Other'
  role      Role     @default(patient)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  appointments Appointment[]
  diagnoses    Diagnosis[]
}

enum Role {
  patient
  doctor
  admin
}

model Doctor {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String
  imageUrl    String?
  specialization String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  appointments Appointment[]
  
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])
}

model Department {
  id          String   @id @default(uuid())
  name        String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  appointments Appointment[]
  doctors      Doctor[]
}

model Appointment {
  id           String   @id @default(uuid())
  
  patientId    String
  patient      User     @relation(fields: [patientId], references: [id])
  
  doctorId     String
  doctor       Doctor   @relation(fields: [doctorId], references: [id])
  
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  
  date         String
  time         String
  reason       String
  status       AppointmentStatus @default(pending)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum AppointmentStatus {
  pending
  confirmed
  completed
  cancelled
}

model Diagnosis {
  id        String   @id @default(uuid())
  
  patientId String
  patient   User     @relation(fields: [patientId], references: [id])
  
  symptoms  String   // Comma separated list of symptoms
  disease   String   // Predicted disease
  confidence String  // Confidence score (e.g., "95%")
  
  history   String   // JSON string containing Q&A (Appetite, Sleep, etc.)
  
  doctorVisible Boolean @default(true)
  
  createdAt DateTime @default(now())
}
